apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: db-pvc
  labels:
    app: lanchonete-clientedb
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: db-pv
  labels:
    type: local
spec:
  storageClassName: manual
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/mnt/data"
---
apiVersion: v1
kind: Secret
metadata:
  name: db-secret
type: Opaque
data:
  db_user: dXN1YXJpbw==
  db_password: ZGF0YWJhc2Vwd2QxMjA4
  db_root_password: Um9vdGRhdGFiYXNlcHdkMTIwOA==
  db_database: bGFuY2hvbmV0ZQ==
  db_port: MzMwNg==
  db_server: bGFuY2hvbmV0ZWRi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: lanchonete-clientedb
  labels:
    app: lanchonete-clientedb
    tier: database
spec:
  replicas: 1
  selector:
    matchLabels:
      app: lanchonete-clientedb
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: lanchonete-clientedb
        tier: database
    spec:
      containers:
        - name:  lanchonete-clientedb
          image: diegobbrito17/lanchonete-cliente-db:1
          ports:
            - containerPort: 3306
              name: lanchonete-clientedb
          env:
            - name: MYSQL_ROOT_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_root_password
            - name: MYSQL_DATABASE
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_database
            - name: MYSQL_USER
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_user
            - name: MYSQL_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_password
          volumeMounts:
            - name: db-persistent-storage
              mountPath: /var/lib/mysql
      volumes:
        - name: db-persistent-storage
          persistentVolumeClaim:
            claimName: db-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: lanchonete-clientedb
  labels:
    app: lanchonete-clientedb
    tier: database
spec:
  ports:
    - port: 3306
      targetPort: 3306
  selector:
    app: lanchonete-clientedb
    tier: database
  clusterIP: None
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: lanchonete-cliente
  labels:
    app: lanchonete-cliente
spec:
  replicas: 1
  selector:
    matchLabels:
      app: lanchonete-cliente
  template:
    metadata:
      labels:
        app: lanchonete-cliente
    spec:
      containers:
        - name: lanchonete-cliente-container
          image: diegobbrito17/lanchonete-cliente:latest
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 8080
          env:
            - name: DB_DATABASE
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_database
            - name: DB_USER
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_user
            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_password
            - name: DB_PORT
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_port
            - name: DB_SERVER
              valueFrom:
                secretKeyRef:
                  name: db-secret
                  key: db_server
          livenessProbe:
            httpGet:
              path: /lanchonete/actuator/health
              port: 8080
            failureThreshold: 3
            initialDelaySeconds: 30
            periodSeconds: 10
            successThreshold: 1
            timeoutSeconds: 1
          readinessProbe:
            httpGet:
              path: /lanchonete/actuator/health
              port: 8080
            failureThreshold: 3
            initialDelaySeconds: 30
            periodSeconds: 10
            successThreshold: 1
            timeoutSeconds: 1
---
apiVersion: v1
kind: Service
metadata:
  name: svc-lanchonete-cliente
  labels:
    app: lanchonete-cliente
spec:
  ports:
    - protocol: TCP
      port: 8080
      targetPort: 8080
  type: LoadBalancer
  selector:
    app: lanchonete-cliente
